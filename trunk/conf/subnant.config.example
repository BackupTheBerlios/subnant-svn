<?xml version="1.0"?>

<subnant description="Configuration settings for SubNAnt - http://subnant.berlios.de">

    <!-- If svn-bindir is empty assume Subversion is in environment path -->
    <svn-bindir description="Location of Subversion binary files"></svn-bindir>
    
    <svn-repos description="Repository configuration">    
        <svn-root description="Root location of all repositories">/svnroot/repos</svn-root>
        <fs-type description="Type of repository: 'bdb' or 'fsfs'">bdb</fs-type>
        <!-- If config-dir is empty assume default configuration file used -->
        <config-dir description="Read user configuration files from directory"></config-dir>
        <bdb-log-keep description="Disable automatic log file removal [Berkeley DB]: 'true' or 'false'">false</bdb-log-keep>
        <bdb-txn-nosync description="Disable fsync at transaction commit [Berkeley DB]: 'true' or 'false'">false</bdb-txn-nosync>
    </svn-repos>
    
    <svn-dumps description="Output directory for Subversion repository dumps">/svnroot/dumps</svn-dumps>
    
    <mail description="Email settings">
        <from description="Email sent from this address">subnant@example.com</from>
        <host description="Host used to send email">localhost</host>
        <tolist description="Addresses emailed result of Subnant target execution">
            <to>svnadmin@example.com</to>
            <!-- <to>support@example.com</to> -->
        </tolist>
        <prefix description="Subject prefix for email generated by Subnant target">[Subnant]</prefix>
        <target description="Email sent on success and/or failure of target execution: 'true' or 'false' or 'onfail'">
            <!-- 'true'   - email sent on success or failure                  -->
            <!-- 'false'  - default setting (if no value set) sends no email  -->
            <!-- 'onfail' - email sent on failure of target execution         -->
            <bugtraq>false</bugtraq>
            <commit-access>false</commit-access>
            <commit-email>false</commit-email>
            <create>true</create>
            <dump>true</dump>
            <verify>true</verify>
        </target>
    </mail>
    
    <bugtraq description="Set Subversion bugtraq properties in a working copy">
        <message>Issue : %BUGID%</message>
        <append>true</append>
        <url>http://localhost/show_bug.cgi?id=%BUGID%</url>
        <label>Bug-ID / Issue-Nr:</label>
        <number>true</number>
        <warnifnoissue>true</warnifnoissue>
    </bugtraq>

</subnant>
