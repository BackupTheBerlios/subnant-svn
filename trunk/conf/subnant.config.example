<?xml version="1.0"?>
<!-- $Id$ -->
<subnant>

	<description>Configuration settings for NAnt project subnant.build</description>
	<reference>http://subnant.berlios.de</reference>

	<svn_bindir required="no">
		<description>Subversion directory for binary files svn, svnlook and svnadmin</description>
		<!-- <value>C:\Program Files\Subversion\bin</value> -->
		<!-- <value>/usr/local/bin</value> -->
	</svn_bindir>

	<svn_repos required="yes">
		<description>Root directory for all Subversion repositories</description>
		<value>/svnroot/repos</value>
	</svn_repos>

	<svn_dumps required="yes">
		<description>Output directory for Subversion repository dumps</description>
		<value>/svnroot/dumps</value>
	</svn_dumps>

	<mail required="no">
		<description>Email settings</description>
		<from required="yes">
			<description>Email generated by Subnant is sent from this address</description>
			<value>subnant@example.com</value>
		</from>
		<host required="yes">
			<description>Host used to send email</description>
			<value>localhost</value>
		</host>
		<tolist required="yes">
			<description>Addresses emailed with result of Subnant target execution</description>
			<value>svnadmin@example.com</value>
			<!-- <value>support@example.com</value> -->
		</tolist>
		<subject_prefix required="no">
			<description>Subject prefix for email generated by Subnant target</description>
			<value>[Subnant]</value>
		</subject_prefix>
		<target required="no">
			<description>Defines if email sent on success and/or failure of Subnant target execution</description>
			<!-- Valid values: no yes fail                                  -->
			<!-- "no"   - default setting (if no value set) sends no email  -->
			<!-- "yes"  - email sent on success or failure                  -->
			<!-- "fail" - email sent on failure executing target            -->
			<bugtraq required="no">no</bugtraq>
			<commit-control-access required="no">no</commit-control-access>
			<commit-email required="no">no</commit-email>
			<create required="no">yes</create>
			<dump required="no">yes</dump>
			<verify required="no">yes</verify>
			<test required="no">no</test>
		</target>
	</mail>

	<bugtraq required="no">
		<description>Set Subversion bugtraq properties in a working copy</description>
		<reference>http://tortoisesvn.tigris.org/docs/TortoiseSVN_en/ch04s10.html</reference>
		<message required="yes">Issue : %BUGID%</message>
		<append required="yes">true</append>
		<url required="yes">http://localhost/show_bug.cgi?id=%BUGID%</url>
		<label required="yes">Bug-ID / Issue-Nr:</label>
		<number required="yes">true</number>
		<warnifnoissue required="yes">true</warnifnoissue>
	</bugtraq>

</subnant>
