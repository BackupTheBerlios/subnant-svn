<?xml version="1.0"?>

<subnant description="Configuration settings for SubNAnt - http://subnant.berlios.de">

  <!-- If svn_bindir is empty assume Subversion is in environment path -->
  <svn_bindir   description="Location of Subversion binary files"></svn_bindir>

  <svn_repos description="Repository configuration">    
    <svnroot description="Root location of all repositories">/svnroot/repos</svnroot>
    <fs-type description="Type of repository: 'bdb' or 'fsfs'">bdb</fs-type>
    <!-- If config-dir is empty assume default configuration file used -->
    <config-dir description="Read user configuration files from directory"></config-dir>
    <bdb-log-keep description="Disable automatic log file removal [Berkeley DB]: 'no' or 'yes'">no</bdb-log-keep>
    <bdb-txn-nosync description="Disable fsync at transaction commit [Berkeley DB]: 'no' or 'yes'">no</bdb-txn-nosync>
  </svn_repos>

  <svn_dumps description="Output directory for Subversion repository dumps">/svnroot/dumps</svn_dumps>

  <mail description="Email settings">
    <from description="Email sent from this address">subnant@example.com</from>
    <host description="Host used to send email">localhost</host>
    <tolist description="Addresses emailed result of Subnant target execution">
      <to>svnadmin@example.com</to>
      <!-- <to>support@example.com</to> -->
    </tolist>
    <prefix description="Subject prefix for email generated by Subnant target">[Subnant]</prefix>
    <target description="Email sent on success and/or failure of target execution: 'no' or 'yes' or 'fail'">
      <!-- 'no'   - default setting (if no value set) sends no email  -->
      <!-- 'yes'  - email sent on success or failure                  -->
      <!-- 'fail' - email sent on failure executing target            -->
      <bugtraq>no</bugtraq>
      <commit-access>no</commit-access>
      <commit-email>no</commit-email>
      <create>yes</create>
      <dump>yes</dump>
      <verify>yes</verify>
    </target>
  </mail>

  <bugtraq description="Set Subversion bugtraq properties in a working copy">
    <message>Issue : %BUGID%</message>
    <append>true</append>
    <url>http://localhost/show_bug.cgi?id=%BUGID%</url>
    <label>Bug-ID / Issue-Nr:</label>
    <number>true</number>
    <warnifnoissue>true</warnifnoissue>
  </bugtraq>

</subnant>
