<project name="test-load" default="test-load">

    <target name="test-load">
        <nant buildfile="${subnant-root}/src/tests/server/dump.build" target="test-dump"/>
        <echo message="Deleting ${repos}" level="Warning"/>
        <delete dir="${path::combine(svn-root,repos)}"/>
        <nant buildfile="${subnant-root}/src/targets/server/create.build" target="create">
            <properties>
                <property name="no-hooks"    value="true"/>
                <property name="no-svnserve" value="true"/>
            </properties>
        </nant>
        <nant buildfile="${subnant-root}/src/targets/server/load.build" target="load">
            <properties>
                <property name="dumps"    value="${repos}"/>   
                <property name="no-total" value="true"/>   
            </properties>
        </nant>
        <nant buildfile="${subnant-root}/src/targets/server/verify.build" target="verify"/>
        <echo message="Deleting ${repos}" level="Warning"/>
        <delete dir="${path::combine(svn-root,repos)}"/>
        <nant buildfile="${subnant-root}/src/targets/server/create.build" target="create">
            <properties>
                <property name="no-hooks"    value="true"/>
                <property name="no-svnserve" value="true"/>
            </properties>
        </nant>
        <nant buildfile="${subnant-root}/src/targets/server/load.build" target="load">
            <properties>
                <property name="dumps"    value="${repos+'.dump.zip'}"/>   
                <property name="no-total" value="true"/>   
            </properties>
        </nant>
        <nant buildfile="${subnant-root}/src/targets/server/verify.build" target="verify"/>
    </target>

</project>
