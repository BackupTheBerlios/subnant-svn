<project name="test-load" default="test-load">

    <target name="test-load">
        <log-echo message="[Test load from standard dump]" file="${subnant-output}"/>
        <nant buildfile="${subnant-root}/src/targets/test.build" target="create-test-environment"/>
        <nant buildfile="${subnant-root}/src/targets/server/dump.build" target="dump">
            <properties>
                <property name="compress" value="false"/>   
            </properties>
        </nant>
        <echo message="Deleting ${repos}" level="Warning"/>
        <delete dir="${path::combine(svn-root,repos)}"/>
        <nant buildfile="${subnant-root}/src/targets/server/create.build" target="create">
            <properties>
                <property name="no-hooks"    value="true"/>
                <property name="no-svnserve" value="true"/>
            </properties>
        </nant>
        <nant buildfile="${subnant-root}/src/targets/server/load.build" target="load">
            <properties>
                <property name="dumps" value="${repos}"/>   
            </properties>
        </nant>
        <nant buildfile="${subnant-root}/src/targets/server/verify.build" target="verify"/>

        <log-echo message="[Test load from compressed dump]" file="${subnant-output}"/>
        <echo message="Deleting ${repos}" level="Warning"/>
        <delete dir="${path::combine(svn-root,repos)}"/>
        <delete dir="${path::combine(dump-root,repos)}"/>
        <nant buildfile="${subnant-root}/src/targets/test.build" target="create-test-environment"/>
        <nant buildfile="${subnant-root}/src/targets/server/dump.build" target="dump">
            <properties>
                <property name="compress" value="9"/>
            </properties> 
        </nant>
        <echo message="Deleting ${repos}" level="Warning"/>
        <delete dir="${path::combine(svn-root,repos)}"/>
        <nant buildfile="${subnant-root}/src/targets/server/create.build" target="create">
            <properties>
                <property name="no-hooks"    value="true"/>
                <property name="no-svnserve" value="true"/>
            </properties>
        </nant>
        <nant buildfile="${subnant-root}/src/targets/server/load.build" target="load">
            <properties>
                <property name="dumps" value="${repos}.dump.zip"/>   
            </properties>
        </nant>
        <nant buildfile="${subnant-root}/src/targets/server/verify.build" target="verify"/>

        <log-echo message="[Test load from incremental dump]" file="${subnant-output}"/>
        <echo message="Deleting ${repos}" level="Warning"/>
        <delete dir="${path::combine(svn-root,repos)}"/>
        <delete dir="${path::combine(dump-root,repos)}"/>
        <nant buildfile="${subnant-root}/src/targets/test.build" target="create-test-environment"/>
        <nant buildfile="${subnant-root}/src/targets/server/dump.build" target="dump">
            <properties>
                <property name="compress"    value="false"/>   
                <property name="incremental" value="true"/>   
                <property name="deltas"      value="true"/>   
                <property name="rev"         value="0:2"/>
            </properties>
        </nant>
        <echo message="Deleting ${repos}" level="Warning"/>
        <delete dir="${path::combine(svn-root,repos)}"/>
        <nant buildfile="${subnant-root}/src/targets/server/create.build" target="create">
            <properties>
                <property name="no-hooks"    value="true"/>
                <property name="no-svnserve" value="true"/>
            </properties>
        </nant>
        <nant buildfile="${subnant-root}/src/targets/server/load.build" target="load">
            <properties>
                <property name="dumps" value="${repos}.r0-2.dump"/>   
            </properties>
        </nant>
        <nant buildfile="${subnant-root}/src/targets/server/verify.build" target="verify"/>
    </target>

</project>
