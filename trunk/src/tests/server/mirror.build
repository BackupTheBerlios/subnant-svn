<project name="test-mirror" default="test-mirror">

    <target name="test-mirror" depends="init">
        <nant buildfile="${subnant-root}/src/targets/test.build" target="create-test-environment"/>
        <nant buildfile="${subnant-root}/src/targets/server/dump.build" target="dump">
            <properties>
                <property name="compress" value="false"/>   
            </properties>
        </nant>
        <nant buildfile="${subnant-root}/src/targets/server/mirror.build" target="mirror">
            <properties>
                <property name="url" value="${dump-url}"/>   
            </properties>
        </nant>
        <nant buildfile="${subnant-root}/src/targets/server/dump.build" target="dump">
            <properties>
                <property name="compress" value="9"/>   
            </properties>
        </nant>
        <nant buildfile="${subnant-root}/src/targets/server/mirror.build" target="mirror">
            <properties>
                <property name="url" value="${dump-url}.zip"/>   
            </properties>
        </nant>
    </target>

    <target name="init">
        <property name="dump-url" value="${path::combine(dump-root,repos)}"/>
        <property name="dump-url" value="${subnant::to-uri(path::combine(dump-url,repos))}.dump"/>
    </target>
   
</project>
